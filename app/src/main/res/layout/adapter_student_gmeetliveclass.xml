<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:id="@+id/adapter_patient_pharmacy_viewContainer"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/CustomCardView">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible">

        <RelativeLayout
            android:id="@+id/adapter_student_headLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
x
            <TextView
                android:id="@+id/adapter_student_gmeet_titlename"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:gravity="start|center"
                android:maxLines="4"
                android:minHeight="40dp"
                android:padding="10dp"
                android:text="Exam Name"
                android:textColor="@color/textHeading"
                android:textSize="@dimen/primaryText"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:orientation="horizontal"
                android:gravity="center"
                android:background="@color/transparent"
                android:layout_centerVertical="true">

                <LinearLayout
                    android:id="@+id/adapter_student_gmeet_joinclass"
                    android:layout_width="110dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:background="@color/transparent"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:visibility="visible">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/ic_view" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/join"
                        android:textColor="@color/hyperLink" />

                </LinearLayout>
            </LinearLayout>

        </RelativeLayout>


        <LinearLayout
            android:id="@+id/data_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:padding="5dp"
            android:orientation="horizontal"
            android:baselineAligned="false"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="5dp"
            android:layout_below="@+id/adapter_student_headLayout">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:text="@string/date"
                        android:textColor="@color/textHeading"
                        android:textSize="@dimen/secondaryText"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/gmeet_date"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="vgjvgjj"
                        android:textColor="@color/textHeading"
                        android:textSize="@dimen/secondaryText" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_weight="1.3"
                        android:weightSum="2">

                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:text="@string/classes"
                            android:textStyle="bold"
                            android:textColor="@color/textHeading"
                            android:textSize="@dimen/secondaryText"/>

                        <TextView
                            android:id="@+id/gmeet_classes"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="vgjvgjj"
                            android:textColor="@color/textHeading"
                            android:textSize="@dimen/secondaryText" />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.7"
                        android:gravity="end">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:visibility="visible">

                            <TextView
                                android:id="@+id/gmeet_status"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"

                                android:background="@color/grey"
                                android:paddingStart="5dp"
                                android:paddingEnd="5dp"
                                android:textSize="@dimen/secondaryText"
                                android:text="@string/empty"
                                android:layout_marginLeft="10dp"
                                android:textColor="@color/white"
                                android:textStyle="bold"
                                />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_below="@+id/data_layout"
                    android:layout_marginEnd="10dp"
                    android:weightSum="2">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="@string/classhost"
                        android:textStyle="bold"
                        android:textColor="@color/textHeading"
                        android:textSize="@dimen/secondaryText"/>

                    <TextView
                        android:id="@+id/gmeet_class_host"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="vgjvgjj"
                        android:textColor="@color/textHeading"
                        android:textSize="@dimen/secondaryText" />

                </LinearLayout>
            </LinearLayout>


        </LinearLayout>



    </RelativeLayout>

</androidx.cardview.widget.CardView>
