<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/adapter_student_exam_schedule_exam_list"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/studentAdapter_nameHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="1.2">
                    <TextView
                        android:id="@+id/count"
                        android:layout_width="45dp"
                        android:layout_height="wrap_content"
                        android:text="10"
                        android:padding="10dp"
                        android:textColor="@color/textHeading"
                        android:textSize="@dimen/primaryText"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/studentAdapter_routeNameTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="english"
                        android:padding="10dp"
                        android:textColor="@color/textHeading"
                        android:textSize="@dimen/primaryText"
                        android:textStyle="bold" />

                </LinearLayout>

                <TextView
                    android:id="@+id/studentAdapter_status"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="fff"
                    android:layout_marginRight="10dp"
                     android:gravity="end"
                    android:layout_weight="0.8"
                    android:textColor="@color/textHeading"
                    android:textSize="@dimen/primaryText"
                    android:textStyle="bold" />

            </LinearLayout>

            <TableLayout
                android:id="@+id/studentAdapter_vehicleTable"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="*">

            </TableLayout>

        </LinearLayout>

</RelativeLayout>

