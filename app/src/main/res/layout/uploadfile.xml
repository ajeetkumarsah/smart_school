<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/actionBarSecondary"
            android:layout_width="match_parent"
            android:layout_height="56dp">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="56dp"
                android:orientation="horizontal"
                android:weightSum="3">

                <ImageView
                    android:id="@+id/actionBar_backBtn"
                    android:layout_width="56dp"
                    android:layout_height="match_parent"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_back"
                    android:layout_gravity="start"
                    android:padding="19dp"/>

                <TextView
                    android:id="@+id/actionBar_title"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="10dp"
                    android:layout_toEndOf="@+id/actionBar_backBtn"
                    android:layout_weight="1.8"
                    android:adjustViewBounds="true"
                    android:layout_marginTop="5dp"
                    android:gravity="center_vertical"
                    android:scaleType="fitXY"
                    android:textColor="@color/white"
                    android:textSize="@dimen/heading" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_toEndOf="@+id/actionBar_title"
                    android:layout_marginStart="10dp"
                    android:layout_weight="1"
                    android:textSize="@dimen/heading"
                    android:gravity="end"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/add"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:layout_gravity="center"
                        android:background="@drawable/green_border"
                        android:text="Add Leave"
                        android:paddingStart="5dp"
                        android:paddingEnd="5dp"
                        android:textSize="@dimen/heading" />

                </LinearLayout>

            </LinearLayout>

        </FrameLayout>

        <RelativeLayout
            android:id="@+id/addLeave_dialog_apply_dateBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/grey_outline">

            <TextView
                android:id="@+id/addLeave_dialog_apply_dateTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="40dp"
                android:textSize="@dimen/primaryText"
                android:gravity="start|center"
                android:padding="5dp"
                android:text="@string/AppliedDate"
                android:textStyle="bold"
                android:textColor="@color/textHeading" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/addLeave_dialog_dateBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:id="@+id/addLeave_dialog_fromdateTV"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:minHeight="40dp"
                android:layout_weight="1"
                android:textSize="@dimen/primaryText"
                android:gravity="start|center"
                android:padding="5dp"
                android:background="@drawable/grey_outline"
                android:text="@string/fromDate"
                android:textStyle="bold"
                android:textColor="@color/textHeading"
                />
            <TextView
                android:id="@+id/addLeave_dialog_todateTV"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:minHeight="40dp"
                android:layout_weight="1"
                android:background="@drawable/grey_outline"
                android:textSize="@dimen/primaryText"
                android:layout_marginStart="5dp"
                android:gravity="start|center"
                android:padding="5dp"
                android:text="@string/toDate"
                android:textStyle="bold"
                android:textColor="@color/textHeading"
                />


        </LinearLayout>


        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal"
            android:weightSum="2">


            <EditText
                android:id="@+id/reason"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/grey_outline"
                android:gravity="start"
                android:padding="5dp"
                android:layout_weight="1"
                android:hint="@string/Reason"
                android:minHeight="40dp"
                android:textColorHint="#000000"
                android:textSize="@dimen/primaryText"
                android:textStyle="bold" />

        </LinearLayout>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            app:cardElevation="3dp"
            app:cardUseCompatPadding="true"
            android:layout_marginLeft="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_margin="10dp"
                android:weightSum="2">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:gravity="center"
                    >
                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_weight="1"
                        android:src="@drawable/uploadfile"
                        android:visibility="visible"/>

                    <TextView
                        android:id="@+id/textview"
                        android:hint="Select File to Upload"
                        android:layout_gravity="center"
                        android:gravity="center_horizontal"
                        android:textSize="@dimen/secondaryText"
                        android:layout_marginBottom="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <TextView
                    android:id="@+id/buttonSelectImage"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:gravity="center"
                    android:background="@drawable/button_style_grey"
                    android:layout_gravity="center"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="@dimen/primaryText"
                    android:text="Choose File" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/addLeave_dialog_submitBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20sp"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:background="@color/green"
            android:text="@string/submit"
            android:fontFamily="sans-serif-condensed"
            android:textColor="@color/white"
            android:textSize="@dimen/primaryText"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>