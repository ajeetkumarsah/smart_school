<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/main_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="2">

          <LinearLayout
              android:id="@+id/data"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
              android:visibility="visible"
              android:layout_weight="1"
              android:orientation="vertical">

              <androidx.cardview.widget.CardView
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  app:cardElevation="5dp">

                  <LinearLayout
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="horizontal"
                      android:padding="10dp"
                      android:weightSum="2">

                      <LinearLayout
                          android:id="@+id/presentation"
                          android:layout_width="0dp"
                          android:layout_height="wrap_content"
                          android:layout_alignParentEnd="true"
                          android:orientation="horizontal"
                          android:layout_weight="1"
                          android:visibility="visible"
                          android:background="@color/transparent">

                          <ImageView
                              android:layout_width="40dp"
                              android:layout_height="30dp"
                              android:src="@drawable/ic_view" />

                          <TextView
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:text="@string/presentation"
                              android:layout_marginTop="5dp"
                              android:textColor="@color/hyperLink"/>

                      </LinearLayout>

                      <LinearLayout
                          android:layout_width="0dp"
                          android:layout_weight="1"
                          android:gravity="end"
                          android:layout_height="wrap_content"
                          android:weightSum="3">

                          <ImageView
                              android:id="@+id/download_attachment"
                              android:layout_width="25dp"
                              android:layout_height="25dp"
                              android:visibility="gone"
                              android:src="@drawable/ic_file" />

                          <ImageView
                              android:id="@+id/youtubeurl"
                              android:layout_width="25dp"
                              android:layout_height="25dp"
                              android:layout_weight="1"
                              android:visibility="gone"
                              android:src="@drawable/youtube_icon" />

                          <ImageView
                              android:id="@+id/download_video"
                              android:layout_width="25dp"
                              android:visibility="gone"
                              android:layout_height="25dp"
                              android:src="@drawable/pdf_file" />

                      </LinearLayout>

                  </LinearLayout>
              </androidx.cardview.widget.CardView>

              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  android:layout_marginTop="5dp"
                android:weightSum="2">

                  <TextView
                      android:layout_width="0dp"
                      android:layout_height="wrap_content"
                      android:layout_weight="1"
                      android:padding="5dp"
                      android:text="@string/classes"
                      android:textColor="@color/textHeading" />

                  <TextView
                      android:id="@+id/classes"
                      android:layout_width="0dp"
                      android:layout_height="wrap_content"
                      android:padding="5dp"
                      android:text="-"
                      android:textColor="@color/textHeading"
                      android:layout_weight="1"/>


              </LinearLayout>
              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  android:weightSum="2">
                  <TextView
                      android:layout_width="0dp"
                      android:layout_height="wrap_content"
                      android:layout_weight="1"
                      android:padding="5dp"
                      android:textColor="@color/textHeading"
                      android:text="@string/subject"/>
                  <TextView
                      android:id="@+id/subject"
                      android:layout_width="0dp"
                      android:padding="5dp"
                      android:text="-"
                      android:textColor="@color/textHeading"
                      android:layout_height="wrap_content"
                      android:layout_weight="1"/>

              </LinearLayout>
              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  android:weightSum="2">
                  <TextView
                      android:layout_width="0dp"
                      android:layout_height="wrap_content"
                      android:layout_weight="1"
                      android:padding="5dp"
                      android:textColor="@color/textHeading"
                      android:text="@string/date"/>
                  <TextView
                     android:id="@+id/dates"
                      android:layout_width="0dp"
                      android:layout_height="wrap_content"
                      android:padding="5dp"
                      android:text="-"
                      android:textColor="@color/textHeading"
                      android:layout_weight="1"/>

              </LinearLayout>


              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  android:weightSum="2">
                  <TextView
                      android:layout_width="0dp"
                      android:layout_height="wrap_content"
                      android:layout_weight="1"
                      android:padding="5dp"
                      android:textColor="@color/textHeading"
                      android:text="@string/lessons"/>
                  <TextView
                      android:id="@+id/lesson"
                      android:layout_width="0dp"
                      android:padding="5dp"
                      android:text="-"
                      android:textColor="@color/textHeading"
                      android:layout_height="wrap_content"
                      android:layout_weight="1"/>

              </LinearLayout>
              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  android:weightSum="2">
                  <TextView
                      android:layout_width="0dp"
                      android:layout_height="wrap_content"
                      android:layout_weight="1"
                      android:padding="5dp"
                      android:textColor="@color/textHeading"
                      android:text="@string/topics"/>
                  <TextView
                      android:id="@+id/topic"
                      android:layout_width="0dp"
                      android:padding="5dp"
                      android:text="-"
                      android:textColor="@color/textHeading"
                      android:layout_height="wrap_content"
                      android:layout_weight="1"/>

              </LinearLayout>
              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  android:weightSum="2">
                  <TextView
                      android:layout_width="0dp"
                      android:layout_height="wrap_content"
                      android:layout_weight="1"
                      android:padding="5dp"
                      android:textColor="@color/textHeading"
                      android:text="@string/subtopics"/>
                  <TextView
                      android:id="@+id/subtopic"
                      android:layout_width="0dp"
                      android:padding="5dp"
                      android:text="-"
                      android:textColor="@color/textHeading"
                      android:layout_height="wrap_content"
                      android:layout_weight="1"/>

              </LinearLayout>

              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="vertical"
                  android:layout_marginTop="10dp"
                  >
                  <TextView
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_weight="1"
                      android:padding="5dp"
                      android:textColor="@color/textHeading"
                      android:text="General Objectives"/>
                  <TextView
                      android:id="@+id/generalobjective"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_weight="1"
                      android:padding="5dp"
                      android:text="-"/>

              </LinearLayout>

              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="vertical"
                  android:layout_marginTop="10dp"
                  >
                  <TextView
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_weight="1"
                      android:padding="5dp"
                      android:textColor="@color/textHeading"
                      android:text="Teaching Method"/>
                  <TextView
                      android:id="@+id/teachingMethod"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_weight="1"
                      android:padding="5dp"
                      android:text="-"/>

              </LinearLayout>

              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="vertical"
                  android:layout_marginTop="10dp">

                  <TextView
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_weight="1"
                      android:padding="5dp"
                      android:textColor="@color/textHeading"
                      android:text="Previous Knowledge"/>
                  <TextView
                      android:id="@+id/previousknowledge"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_weight="1"
                      android:padding="5dp"
                      android:text="-"/>

              </LinearLayout>

              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="vertical"
                  android:layout_marginTop="10dp">

                  <TextView
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_weight="1"
                      android:padding="5dp"
                      android:textColor="@color/textHeading"
                      android:text="Comprehensive Questions"/>
                  <TextView
                      android:id="@+id/comprehensive"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_weight="1"
                      android:padding="5dp"
                      android:text="-"/>

              </LinearLayout>

          </LinearLayout>

            <LinearLayout
                android:id="@+id/nodata"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_marginTop="200dp"
                android:orientation="vertical"
                android:visibility="gone">

                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:src="@drawable/no_data" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Not Scheduled !"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/primaryText"
                    android:textStyle="bold" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>