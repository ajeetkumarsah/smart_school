<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="8dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/homework_bottomSheet_headerLay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="50dp">

        <TextView
            android:id="@+id/homework_bottomSheet_headerTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="50dp"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:textSize="@dimen/primaryText"
            android:textStyle="bold"
            android:textColor="@color/textHeading" />

        <ImageView
            android:id="@+id/homework_bottomSheet_crossBtn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="12dp"
            android:src="@drawable/ic_close"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:layout_centerVertical="true" />

    </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/homework_bottomSheet_headerLay">

             <RelativeLayout
                 android:layout_width = "match_parent"
                 android:layout_height = "match_parent"
                 android:orientation = "vertical">
                 <TextView
                     android:id = "@+id/bottomSheet_TV"
                     android:layout_width = "match_parent"
                     android:layout_height = "match_parent"
                     android:textColor="@color/textHeading"
                     android:textSize="@dimen/primaryText"
                     android:layout_margin="10dp"
                     />
             </RelativeLayout>
        </ScrollView>

</RelativeLayout>

</LinearLayout>