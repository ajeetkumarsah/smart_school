<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:layout_weight="1"
    android:elevation="8dp"
    app:cardCornerRadius="4dp"
    app:cardElevation="5dp"
    app:cardPreventCornerOverlap="false"
    style="@style/CustomCardView"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="2">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/coursethumnail"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:layout_weight="0.7"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/demo2"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:alpha="0.7"
                    android:background="@color/textHeading"
                    android:gravity="center"
                    android:text="Your String"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:textColor="@color/textHeading"
                    android:textSize="17dp"
                    android:layout_marginTop="135dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="3dp"
                        >
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:orientation="vertical">

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/course_createdimage"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:src="@drawable/default_image"
                                android:scaleType="centerCrop"
                                />

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_gravity="center"
                            android:weightSum="2"
                            >

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:orientation="vertical"
                                android:layout_weight="1"
                                >
                                <TextView
                                    android:id="@+id/course_createdby"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_vertical"
                                    android:layout_marginLeft="10dp"
                                    android:text="Tanu Malviya"
                                    android:textStyle="bold"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/primaryText"
                                    />

                                <TextView
                                    android:id="@+id/course_createddate"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_vertical"
                                    android:text="28-02-2021"
                                    android:layout_marginLeft="10dp"
                                    android:textColor="@color/white"
                                   android:textStyle="bold"
                                    android:textSize="@dimen/secondaryText"
                                    />
                            </LinearLayout>

                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.3"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/coursename"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:textStyle="bold"
                    android:textSize="@dimen/heading"
                    android:paddingTop="5dp"
                    android:layout_marginLeft="5dp"
                    android:paddingBottom="5dp"
                    android:textColor="@color/textHeading"
                    android:text="Android Development Course" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">
                        <TextView
                            android:id="@+id/coursediscount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:text="Free"
                            android:visibility="gone"
                            android:layout_marginTop="2dp"
                            android:textColor="@color/textHeading"
                            android:textSize="@dimen/secondaryText" />
                        <TextView
                            android:id="@+id/courseprice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:text="Free"
                            android:layout_marginTop="2dp"
                            android:textColor="@color/textHeading"
                            android:textSize="@dimen/secondaryText" />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/hourlayout"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="end">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginLeft="5dp"
                            android:padding="3dp"
                            android:src="@drawable/ic_clock" />
                        <TextView
                            android:id="@+id/coursehours"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5dp"
                            android:text="hours 20:00:00"
                            android:layout_marginTop="2dp"
                            android:textColor="@color/textHeading"
                            android:textSize="@dimen/secondaryText" />
                    </LinearLayout>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2"
                    android:orientation="horizontal">
                    <ProgressBar
                        android:id="@+id/progressBar"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:indeterminate="false"
                        android:layout_weight="1.8"
                        android:progressTint="@color/yellow"
                        android:layout_marginLeft="5dp"
                        android:progress="50" />
                    <TextView
                        android:id="@+id/course_progress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="50%"
                        android:gravity="center"
                        android:layout_weight="0.2"
                        android:textColor="@color/textHeading"
                        android:textSize="@dimen/primaryText" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2"
                        android:padding="10dp"
                        android:background="@color/transparent">
                        <TextView
                            android:id="@+id/course_details"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Course Details"
                            android:layout_alignParentEnd="true"
                            android:padding="10dp"
                            android:gravity="center"
                            android:layout_weight="1"
                            android:textStyle="bold"
                            android:background="@drawable/button_style_grey"
                            android:textColor="@color/white"
                            android:textSize="@dimen/primaryText" />
                        <TextView
                            android:id="@+id/course_startlesson"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text="Start Lesson"
                            android:gravity="center"
                            android:visibility="visible"
                            android:padding="10dp"
                            android:layout_weight="1"
                            android:textStyle="bold"
                            android:background="@drawable/button_style_accent"
                            android:textColor="@color/white"
                            android:textSize="@dimen/primaryText" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

</androidx.cardview.widget.CardView>
